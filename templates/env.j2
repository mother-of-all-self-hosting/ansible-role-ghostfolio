# your domain, e.g https://example.com
APP_URL={{ ghostfolio_environment_variable_app_url }}
PORT={{ ghostfolio_environment_variable_port }}

# minimum of 32 characters. Generate one with: openssl rand -hex 32
APP_SECRET={{ ghostfolio_environment_variable_app_secret }}

JWT_TOKEN_EXPIRES_IN={{ ghostfolio_environment_variable_jwt_token_expires_in }}

DATABASE_URL={{ ghostfolio_environment_variable_database_url }}
REDIS_URL={{ ghostfolio_environment_variable_redis_url }}

# options: local | s3
STORAGE_DRIVER={{ ghostfolio_environment_variable_storage_driver }}

{% if ghostfolio_environment_variable_storage_driver == 's3' %}
# S3 driver config
AWS_S3_ACCESS_KEY_ID={{ ghostfolio_environment_variable_aws_s3_access_key_id }}
AWS_S3_SECRET_ACCESS_KEY={{ ghostfolio_environment_variable_aws_s3_secret_access_key }}
AWS_S3_REGION={{ ghostfolio_environment_variable_aws_s3_region }}
AWS_S3_BUCKET={{ ghostfolio_environment_variable_aws_s3_bucket }}
AWS_S3_ENDPOINT={{ ghostfolio_environment_variable_aws_s3_endpoint }}
AWS_S3_FORCE_PATH_STYLE={{ ghostfolio_environment_variable_aws_s3_force_path_style | to_json }}
{% endif %}

# default: 50mb
FILE_UPLOAD_SIZE_LIMIT={{ ghostfolio_environment_variable_file_upload_size_limit }}

{% if ghostfolio_mailer_enabled %}
# options: smtp | postmark
MAIL_DRIVER={{ ghostfolio_environment_variable_mail_driver }}
MAIL_FROM_ADDRESS={{ ghostfolio_environment_variable_mail_from_address }}
MAIL_FROM_NAME={{ ghostfolio_environment_variable_mail_from_name }}

{% if ghostfolio_environment_variable_mail_driver == "smtp" %}
# SMTP driver config
SMTP_HOST={{ ghostfolio_environment_variable_smtp_host }}
SMTP_PORT={{ ghostfolio_environment_variable_smtp_port }}
SMTP_USERNAME={{ ghostfolio_environment_variable_smtp_username }}
SMTP_PASSWORD={{ ghostfolio_environment_variable_smtp_password }}
SMTP_SECURE={{ ghostfolio_environment_variable_smtp_secure | to_json }}
SMTP_IGNORETLS={{ ghostfolio_environment_variable_smtp_ignoretls | to_json }}

{% elif ghostfolio_environment_variable_mail_driver == "postmark" %}
# Postmark driver config
POSTMARK_TOKEN={{ ghostfolio_environment_variable_postmark_token }}
{% endif %}
{% endif %}

# for custom drawio server
DRAWIO_URL={{ ghostfolio_environment_variable_drawio_url }}

DISABLE_TELEMETRY={{ ghostfolio_environment_variable_disable_telemetry | to_json }}

{{ ghostfolio_environment_variables_additional_variables }}
